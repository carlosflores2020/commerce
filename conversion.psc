	centi= num_metros*100
	mili= num_metros*1000
	pulgadas=centi*2.5 
	
	Escribir "Su equivalente en centimetros es: ",centi, " cm"
	Escribir "Su equivalente en milimetros es: ",mili, " mm"
	Escribir "Su equivalente en pulgadas es: ",pulgadas, " ´´"
	
	
FinAlgoritmo
